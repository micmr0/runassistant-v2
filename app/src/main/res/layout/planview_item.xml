<?xml version="1.0" encoding="utf-8"?>
<!-- the parent view - provides the gray listfragment background color -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- the innner view - provides the white rectangle -->
    <android.support.v7.widget.CardView
        android:id="@+id/plan_view_item_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <!-- the icon view -->
            <ImageView android:id="@+id/plan_view_item_icon_text_view"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:padding="5dp"
                       android:contentDescription="lala"
                       android:scaleType="fitXY"/>

            <!-- the container view for the title and description -->
            <RelativeLayout
                android:id="@+id/plan_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/plan_view_item_icon_text_view"
                android:layout_centerVertical="true" >

                <!-- the title view -->
                <TextView android:id="@+id/plan_view_item_title_text_view"
                          android:layout_width="150dp"
                          android:layout_height="wrap_content"
                          android:layout_alignParentLeft="true"
                          android:textSize="12sp"
                          android:layout_marginLeft="5sp" />

                <!-- the description view -->
                <TextView android:id="@+id/plan_view_item_description_text_view"
                          android:layout_width="200dp"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:gravity="right"
                          android:textSize="12sp"
                          android:layout_marginRight="5sp" />

                <TextView
                    android:id="@+id/tvDays"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:layout_below="@+id/plan_view_item_title_text_view"
                    android:layout_marginLeft="5sp" />



            </RelativeLayout>
        </LinearLayout>




    </android.support.v7.widget.CardView>

</RelativeLayout>