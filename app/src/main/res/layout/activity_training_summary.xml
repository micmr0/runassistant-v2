<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:id="@+id/activity_training_summary"
          android:fitsSystemWindows="true">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="@color/ColorPrimaryDark"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp"
            android:fitsSystemWindows="true"
            app:expandedTitleTextAppearance="@android:color/transparent">

            <fragment
                android:id="@+id/training_summary_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:fitsSystemWindows="true"
                app:layout_collapseMode="parallax"/>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                layout="@layout/toolbar"
                app:layout_collapseMode="pin" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="10dp">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                style="@style/TrainingSummaryCard">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">
                    <ImageView
                        android:id="@+id/activity_training_summary_image_view"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_run" />
                    <TextView
                        android:id="@+id/activity_training_summary_name_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="28dp"
                        android:gravity="center"
                        tools:text="Wieczorny trening"
                        android:textSize="14sp"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="30dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minHeight="28dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_location"/>
                        <TextView
                            android:id="@+id/activity_training_summary_location_text_view"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textSize="14sp"
                            tools:text="Szczecin"/>
                    </LinearLayout>
                </RelativeLayout>

            </android.support.v7.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_time_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/activity_training_summary_time_label"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_training_summary_time_label"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:padding="5dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_time"/>
                            <TextView
                                android:id="@+id/activity_training_summary_time_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/TrainingSummaryCardValue"
                                tools:text="00:15:45" />
                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_distance_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/activity_training_summary_distance_label"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/activity_training_summary_distance_label"
                            android:layout_centerInParent="true"
                            android:padding="5dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_distance_small"/>
                            <TextView
                                android:id="@+id/activity_training_summary_distance_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/TrainingSummaryCardValue"
                                tools:text="00.15 km" />
                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.33"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_calories_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/activity_training_summary_calories_label"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/activity_training_summary_calories_label"
                            android:layout_centerInParent="true"
                            android:padding="5dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calories"/>
                            <TextView
                                android:id="@+id/activity_training_summary_calories_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/TrainingSummaryCardValue"
                                tools:text="500" />
                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_average_speed_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/activity_training_summary_average_speed_label"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_training_summary_average_speed_label"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:padding="5dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_speed_average"/>
                            <TextView
                                android:id="@+id/activity_training_summary_average_speed_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/TrainingSummaryCardValue"
                                tools:text="10.45 km/h" />
                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_max_speed_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/activity_training_summary_max_speed_label"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/activity_training_summary_max_speed_label"
                            android:layout_centerInParent="true"
                            android:padding="5dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_speed_max"/>
                            <TextView
                                android:id="@+id/activity_training_summary_max_speed_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/TrainingSummaryCardValue"
                                tools:text="15.45 km/h" />
                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_min_altitude_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/activity_training_summary_min_altitude_label"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/activity_training_summary_min_altitude_label"
                            android:layout_centerInParent="true"
                            android:padding="5dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_min_altitude"/>
                            <TextView
                                android:id="@+id/activity_training_summary_min_altitude_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/TrainingSummaryCardValue"
                                tools:text="10" />
                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_max_altitude_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/activity_training_summary_max_altitude_label"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/activity_training_summary_max_altitude_label"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal"
                            android:padding="5dp">
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_max_altitude"/>
                            <TextView
                                android:id="@+id/activity_training_summary_max_altitude_text_view"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                style="@style/TrainingSummaryCardValue"
                                tools:text="120" />
                        </LinearLayout>
                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_weather_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:text="@string/activity_training_summary_weather_label"
                            android:textSize="12sp" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_centerInParent="true"
                            android:padding="5dp"
                            android:layout_below="@+id/activity_training_summary_weather_label">
                            <ImageView
                                android:id="@+id/activity_training_summary_weather_icon"
                                android:layout_width="58dp"
                                android:layout_height="58dp"
                                android:src="@drawable/ic_speed_max"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <TextView
                                        android:id="@+id/activity_training_summary_weather_temp_prefix_text_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/TrainingSummaryCardValue"
                                        android:text="@string/activity_training_summary_temperature_prefix" />
                                    <TextView
                                        android:id="@+id/activity_training_summary_weather_text_view"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        style="@style/TrainingSummaryCardValue"
                                        android:text="@string/activity_training_summary_temperature" />
                                </LinearLayout>

                                <TextView
                                    android:id="@+id/activity_training_summary_weather_pressure_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TrainingSummaryCardValue"
                                    android:text="@string/activity_training_summary_pressure" />
                                <TextView
                                    android:id="@+id/activity_training_summary_weather_humidity_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TrainingSummaryCardValue"
                                    android:text="@string/activity_training_summary_humidity" />
                                <TextView
                                    android:id="@+id/activity_training_summary_weather_wind_speed_text_view"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TrainingSummaryCardValue"
                                    android:text="@string/activity_training_summary_wind_speed" />
                                </LinearLayout>
                        </LinearLayout>



                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="8dp"
                    style="@style/TrainingSummaryCard">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/activity_training_summary_laps_label"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:text="@string/activity_training_summary_laps_label"/>

                        <LinearLayout
                            android:id="@+id/activity_training_summary_laps_desc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:layout_below="@+id/activity_training_summary_laps_label">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.1"
                                android:text="@string/activity_training_summary_number_label"
                                android:gravity="center"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:gravity="center"
                                android:text="@string/activity_training_summary_tempo_label"
                                android:textSize="14sp"/>
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.4"
                                android:gravity="center"
                                android:text="@string/activity_training_summary_time_label"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/activity_training_summary_laps_recycler_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/activity_training_summary_laps_desc"
                            android:layout_centerInParent="true"
                            android:padding="5dp">
                        </android.support.v7.widget.RecyclerView>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>


</android.support.design.widget.CoordinatorLayout>